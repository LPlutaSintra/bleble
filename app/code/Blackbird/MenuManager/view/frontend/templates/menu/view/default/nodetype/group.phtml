<?php /** @var $block Blackbird\MenuManager\Block\NodeType\Group */?>
<?php if($block->getStatus()):?>
    <li class="<?= implode(' ', $block->getClasses())?>">
        <?php if($block->getLinkFirstChild()): ?>
            <a href=<?= $block->getData('url')?> class="<?= implode(' ', $block->getClasses());?>" target=<?=$block->getTarget() ?> role="menuitem">
                <?php endif; ?>
                    <span><?= $block->getTitle()?></span>
            </a>
        <?php if($block->getChildren()):?>
            <ul class="level<?=$block->getLevel();?> submenu">
                <?php echo $block->getData('children') ?>
            </ul>
        <?php endif;?>
    </li>
<?php endif;?>