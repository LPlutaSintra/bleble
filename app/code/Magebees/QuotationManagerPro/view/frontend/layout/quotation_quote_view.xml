<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
		
      <update handle="customer_account"/>
	<update handle="quotation_view_item_renderers"/>   
    <body>
		<referenceContainer name="page.main.title">
            <block class="Magebees\QuotationManagerPro\Block\Quote\View" name="quote.info" template="customer/quote_info.phtml"/>
           
        </referenceContainer>
        <referenceContainer name="content">
          <block class="Magebees\QuotationManagerPro\Block\Quote\View" name="quotation.quote.view" as="view-quote-items" template="customer/view.phtml" cacheable="false">
           <block class="Magento\Framework\View\Element\RendererList" name="quote.view.items.renderers" as="renderer.list"/>
                <!--    <block class="Magento\Theme\Block\Html\Pager" name="quote_view_item_pager"/>-->
               <block class="Magento\Framework\View\Element\Template" name="quote_totals" template="Magebees_QuotationManagerPro::customer/view/totals.phtml" cacheable="false" />  
			 <block class="Magento\Framework\View\Element\Template" name="quote_actions" template="Magebees_QuotationManagerPro::customer/view/quote_action.phtml"/>  
           </block>
			  <block class="Magento\Framework\View\Element\Template" name="quote_message" template="Magebees_QuotationManagerPro::customer/view/send_message.phtml" before="quote.view.info" cacheable="false"/>  <block class="Magento\Framework\View\Element\Template" name="quote_message_history" template="Magebees_QuotationManagerPro::customer/view/message_history.phtml" before="quote.view.info" cacheable="false"/>
			
			 <block class="Magento\Framework\View\Element\Template" as="info" name="quote.view.info" after="quotation.quote.view" template="Magebees_QuotationManagerPro::customer/view/info.phtml"/>
    </referenceContainer>
    </body>
</page>
