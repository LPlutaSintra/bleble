<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.wrapper">
            <container name="top-banner-container" htmlTag="div" htmlClass="top-banner" before="-">
                <block class="Magento\Cms\Block\Block" name="top-banner">
                    <arguments>
                        <argument name="block_id" xsi:type="string">top-banner</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>

        <move element="currency" destination="header.stores.switchers" before="store_switch_dropdown"  />
        <move element="store_switch_dropdown" destination="header.stores.switchers" before="store_language" />
        <move element="store_language" destination="header.stores.switchers" />

        <referenceBlock name="wishlist" remove="true"/>
    </body>
</page>
