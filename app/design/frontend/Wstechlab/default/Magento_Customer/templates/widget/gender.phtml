<div class="field gender<?php if ($block->isRequired()) echo ' required' ?>">
    <label class="label label-light" for="<?php /* @escapeNotVerified */ echo $block->getFieldId('gender')?>"><span><?php /* @escapeNotVerified */ echo __('Gender') ?></span></label>
